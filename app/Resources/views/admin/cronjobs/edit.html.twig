{% extends 'base.html.twig' %}

{% block body %}
    <div class="content">
        <!-- Page Content -->
        <h1>Edit - {{ cron.name }}</h1>
        <hr>

        <div class="row">
            <div class="col-lg-12">
                {{ form_start(form) }}
                    <div class="col-md-6 col-md-offset-3">
                        <div class="form-group">
                            {{ form_label(form.name) }}
                            {{ form_errors(form.name) }}
                            {{ form_widget(form.name) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.command) }}
                            {{ form_errors(form.command) }}
                            {{ form_widget(form.command) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.schedule) }}
                            {{ form_errors(form.schedule) }}
                            {{ form_widget(form.schedule) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.description) }}
                            {{ form_errors(form.description) }}
                            {{ form_widget(form.description) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.enabled) }}
                            {{ form_errors(form.enabled) }}
                            {{ form_widget(form.enabled) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.create, { 'label': 'Update' }) }}
                            <a href="{{ path('delete_cron_job', {'id': cron.id}) }}" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                {{ form_end(form) }}

            </div>
        </div>

    </div>
    <!-- /.content -->
{% endblock %}
